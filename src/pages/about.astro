---
import Layout from "../layouts/main.astro";
import Header from "../components/header";
import PageHeader from "../components/micro/PageHeader";
import ExperienceCard from "../components/micro/ExperienceCard";

// SEO
const title = "Rishwanth Perumandla | Backend Engineer & AI Infrastructure";
const description = "Senior Backend & AI Engineer with 5+ years architecting production systems, distributed microservices, and terabyte-scale ETL pipelines. MS Computer Science from Purdue University.";

const languages = [
  { name: "Python", level: "Expert", focus: "FastAPI, Django, Flask" },
  { name: "Go", level: "Expert", focus: "Gin, Microservices" },
  { name: "Node.js", level: "Expert", focus: "Express, TypeScript" },
  { name: "Java", level: "Proficient", focus: "Spring Boot" },
  { name: "SQL", level: "Expert", focus: "PostgreSQL, MySQL" },
  { name: "Bash/Shell", level: "Proficient", focus: "Automation" },
];

const expertise = [
  { category: "Architecture", skills: ["Distributed Systems", "Microservices", "Event-Driven", "CQRS/Event Sourcing"] },
  { category: "AI/ML Infrastructure", skills: ["Model Serving", "Vector DBs", "RAG Pipelines", "GPU Orchestration"] },
  { category: "Cloud & DevOps", skills: ["Kubernetes", "Terraform", "AWS/GCP/Azure", "CI/CD Pipelines"] },
  { category: "Data Systems", skills: ["PostgreSQL", "Kafka", "Redis", "ElasticSearch", "Airflow"] },
];

// Experience timeline with updated logos
const resumeExperiences = [
  {
    dates: "Aug 2023 - May 2025",
    role: "MS Computer Science",
    company: "Purdue University",
    description: "Pursued Master's in Computer Science with focus on distributed systems, cloud architecture, and AI/ML infrastructure. Coursework included Advanced Database Systems, Distributed Systems, Machine Learning Systems, and Cloud Computing. Gained deep theoretical and practical knowledge in building scalable, reliable systems while contributing to research projects in data processing and system optimization.",
    logo: "https://www.pfw.edu/sites/default/files/styles/wysiwyg_image/public/inline-images-2022/06/PFW_Vertical_2C_Black_Gold_CMYK.jpg?h=601189d8&itok=8t7MMoCC"
  },
  {
    dates: "Jul 2022 - Jul 2023",
    role: "Software Engineer",
    company: "Centella Scientific",
    description: "Orchestrated terabyte-scale ETL pipelines processing 10M+ molecular records daily using Apache Airflow, Pandas, and PySpark. Engineered low-latency model serving infrastructure for GNN-based predictions using FastAPI and TorchServe, delivering 50ms p99 inference latency for 49 pharmacokinetic descriptors across 7M+ compounds. Provisioned multi-cloud Kubernetes infrastructure (AKS/GKE) using Terraform and Helm, deploying Apache Kafka for event streaming and Redis Streams for queue management.",
    logo: "/assets/images/experiences/centellalogo.svg"
  },
  {
    dates: "Jul 2021 - Jul 2022",
    role: "Software Engineer",
    company: "Rivach LLP",
    description: "Scaled backend services to support 2,000+ monthly active users by architecting Node.js/Express, Python (FastAPI, Flask) and Go (Gin) microservices with RESTful APIs on AWS. Reduced authentication failures by 40% by engineering secure server-side modules using OAuth2/JWT protocols and RBAC authorization. Cut release cycles by 50% by implementing CI/CD pipelines (GitHub Actions) and Infrastructure-as-Code (Terraform) for automated deployments.",
    logo: "https://rivach.com/rivach-logo1.png"
  },
  {
    dates: "Jul 2019 - Jul 2021",
    role: "Software Engineer",
    company: "Ubiqlogix Pvt Ltd",
    description: "Processed 100K+ daily requests with 99.5% uptime by architecting scalable microservices using Python (FastAPI, Django), Go (Gin), and Node.js. Reduced operational overhead by 60% by developing automated backend tooling and admin console APIs, replacing manual processes with self-service platform management. Achieved 3x improvement in query throughput by optimizing PostgreSQL, MySQL, and MongoDB schemas.",
    logo: "https://media.licdn.com/dms/image/v2/C4E0BAQECwTGWgWFrCQ/company-logo_200_200/company-logo_200_200/0/1630688997658?e=1772668800&v=beta&t=XPTCIfRER-QOgp5BeGgFCSp9zFNLI7tQp9m74cSMsug"
  }
];

const corePillars = [
  { 
    title: "Reliability", 
    desc: "Systems that stay up. I design for fault tolerance, graceful degradation, and self-healing infrastructure.",
    icon: "M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"
  },
  { 
    title: "Performance", 
    desc: "Sub-100ms latency at scale. From query optimization to caching strategies, speed is a feature.",
    icon: "M13 10V3L4 14h7v7l9-11h-7z"
  },
  { 
    title: "Scalability", 
    desc: "Built to grow. Event-driven architectures and horizontal scaling patterns that handle 10x traffic spikes.",
    icon: "M3 6l3 1m0 0l-3 9a5.002 5.002 0 006.001 0M6 7l3 9M6 7l6-2m6 2l3-1m-3 1l-3 9a5.002 5.002 0 006.001 0M18 7l3 9m-3-9l-6-2m0-2v2m0 16V5m0 16H9m3 0h3"
  },
  { 
    title: "Craft", 
    desc: "Clean code, thoughtful abstractions, and infrastructure as code. Engineering is an artisanal practice.",
    icon: "M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"
  },
];
---

<Layout title={title} description={description}>
  <Header client:load />

  <main class="relative z-10 w-full max-w-4xl mx-auto px-6 md:px-12 xl:px-0 pt-32 md:pt-36 pb-40">
    
    {/* Header */}
    <PageHeader 
      client:load
      title="Rishwanth Perumandla"
      subtitle="Backend Engineer & AI Infrastructure Architect"
      description="I engineer production systems that process millions of requests with sub-100ms latency. Specializing in distributed systems, cloud-native architectures, and AI infrastructure that scales."
      label="Operational"
      variant="terminal"
    />

    {/* Core Pillars Grid - Replaces Stats */}
    <section class="mb-16">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        {corePillars.map((pillar, index) => (
          <div class="p-6 bg-white border border-neutral-200 rounded-xl hover:border-neutral-300 transition-colors group">
            <div class="flex items-start gap-4">
              <div class="p-2 bg-neutral-100 rounded-lg group-hover:bg-neutral-200 transition-colors">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="text-neutral-700">
                  <path d={pillar.icon} stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
              </div>
              <div>
                <h3 class="font-bold text-neutral-900 mb-1">{pillar.title}</h3>
                <p class="text-sm text-neutral-600 leading-relaxed">{pillar.desc}</p>
              </div>
            </div>
          </div>
        ))}
      </div>
    </section>

    {/* Main Content Grid */}
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8 mb-16">
      
      {/* Left Column - Bio */}
      <div class="lg:col-span-2 space-y-8">
        <section>
          <h2 class="text-lg font-bold text-neutral-900 mb-4 flex items-center gap-2">
            <span class="w-1.5 h-1.5 bg-blue-500 rounded-full" />
            Professional Summary
          </h2>
          <div class="prose prose-neutral max-w-none">
            <p class="text-neutral-600 leading-relaxed">
              I am a Software Engineer with 5+ years architecting production backend systems, distributed microservices, and terabyte-scale ETL pipelines across AWS, GCP, and Azure. I hold an MS in Computer Science from <strong>Purdue University</strong>.
            </p>
            <p class="text-neutral-600 leading-relaxed mt-4">
              Expert in <strong>Python, Go, Node.js, and Java</strong>, specializing in high-throughput API design, database optimization, and AI-native application development. Proven track record of achieving <strong>99.9% uptime SLAs</strong>, reducing cloud infrastructure costs by <strong>40%</strong>, and delivering secure platforms processing <strong>100K+ daily requests</strong>.
            </p>
            <p class="text-neutral-600 leading-relaxed mt-4">
              Deep expertise in infrastructure-as-code, container orchestration, and scalable data architecture. I engineer systems that make intelligence possible — from GPU cluster orchestration for AI inference to event-driven microservices handling millions of events.
            </p>
          </div>
        </section>

        <section>
          <h2 class="text-lg font-bold text-neutral-900 mb-4 flex items-center gap-2">
            <span class="w-1.5 h-1.5 bg-purple-500 rounded-full" />
            Core Philosophy
          </h2>
          <div class="prose prose-neutral max-w-none">
            <p class="text-neutral-600 leading-relaxed">
              My engineering philosophy centers on <strong>clarity, reliability, and systematic optimization</strong>. I design backends that handle millions of requests with sub-100ms latency, orchestrate GPU clusters for AI inference, and build data pipelines that process terabytes without breaking a sweat.
            </p>
            <p class="text-neutral-600 leading-relaxed mt-4">
              Outside engineering, I explore storytelling through <a href="/ripe" class="ripe text-xl">RIPE</a> — my creative identity where filmmaking, writing, and visual design converge. Storytelling teaches rhythm and emotion; engineering teaches structure and precision. I bring both into everything I create.
            </p>
          </div>
        </section>
      </div>

      {/* Right Column - Image & System Specs */}
      <div class="space-y-6">
        <div class="relative">
          <img 
            src="/assets/images/ripe.png" 
            alt="Rishwanth Perumandla" 
            class="w-full rounded-xl border border-neutral-200"
          />
          <div class="absolute bottom-0 left-0 right-0 p-4 bg-gradient-to-t from-black/50 to-transparent rounded-b-xl">
            <p class="text-white text-sm font-mono">US-CENTRAL1 // AVAILABLE</p>
          </div>
        </div>

        <div class="p-4 bg-neutral-50 rounded-xl border border-neutral-200">
          <h3 class="font-mono text-xs uppercase tracking-wider text-neutral-400 mb-3">System Specs</h3>
          <div class="space-y-2 text-sm">
            <div class="flex justify-between">
              <span class="text-neutral-500">Location</span>
              <span class="text-neutral-900">Dallas, TX</span>
            </div>
            <div class="flex justify-between">
              <span class="text-neutral-500">Education</span>
              <span class="text-neutral-900">MS CS, Purdue</span>
            </div>
            <div class="flex justify-between">
              <span class="text-neutral-500">Certification</span>
              <span class="text-neutral-900">AWS SAA</span>
            </div>
            <div class="flex justify-between">
              <span class="text-neutral-500">Status</span>
              <span class="text-green-600 flex items-center gap-1">
                <span class="w-1.5 h-1.5 bg-green-500 rounded-full animate-pulse" />
                Available
              </span>
            </div>
          </div>
        </div>
      </div>
    </div>

    {/* Languages Matrix */}
    <section class="mb-16">
      <div class="flex items-end justify-between mb-8">
        <h2 class="text-2xl font-bold text-neutral-900">Languages</h2>
        <span class="font-mono text-xs text-neutral-400">PRIMARY_RUNTIMES</span>
      </div>
      
      <div class="grid grid-cols-2 md:grid-cols-3 gap-4">
        {languages.map((lang) => (
          <div class="p-5 border border-neutral-200 rounded-xl bg-white hover:border-neutral-300 transition-colors group">
            <div class="flex items-center justify-between mb-2">
              <h3 class="font-bold text-neutral-900">{lang.name}</h3>
              <span class={`text-[10px] font-mono px-2 py-1 rounded ${
                lang.level === "Expert" 
                  ? "bg-green-100 text-green-700" 
                  : "bg-blue-100 text-blue-700"
              }`}>
                {lang.level}
              </span>
            </div>
            <p class="text-xs text-neutral-500 font-mono">{lang.focus}</p>
          </div>
        ))}
      </div>
    </section>

    {/* Expertise Matrix */}
    <section class="mb-16">
      <div class="flex items-end justify-between mb-8">
        <h2 class="text-2xl font-bold text-neutral-900">Expertise Matrix</h2>
        <span class="font-mono text-xs text-neutral-400">CAPABILITIES_V2.0</span>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        {expertise.map((area) => (
          <div class="p-6 border border-neutral-200 rounded-xl bg-white hover:border-neutral-300 transition-colors">
            <h3 class="font-mono text-xs font-bold uppercase tracking-widest text-neutral-400 mb-4">
              {area.category}
            </h3>
            <div class="flex flex-wrap gap-2">
              {area.skills.map((skill) => (
                <span class="px-3 py-1 bg-neutral-100 text-neutral-700 text-sm rounded-full">
                  {skill}
                </span>
              ))}
            </div>
          </div>
        ))}
      </div>
    </section>

    {/* Experience Timeline */}
    <section class="mb-16">
      <div class="flex items-end justify-between mb-8">
        <h2 class="text-2xl font-bold text-neutral-900">Experience</h2>
        <span class="font-mono text-xs text-neutral-400">DEPLOYMENT_HISTORY</span>
      </div>
      
      <div class="bg-white border border-neutral-200 rounded-xl p-6 md:p-8">
        {resumeExperiences.map((exp, index) => (
          <ExperienceCard
            client:visible
            dates={exp.dates}
            role={exp.role}
            company={exp.company}
            description={exp.description}
            logo={exp.logo}
            index={index}
          />
        ))}
      </div>
    </section>

    {/* Certifications */}
    <section class="mb-16">
      <div class="flex items-end justify-between mb-8">
        <h2 class="text-2xl font-bold text-neutral-900">Certifications</h2>
        <span class="font-mono text-xs text-neutral-400">CREDENTIALS</span>
      </div>
      
      <div class="p-6 border border-neutral-200 rounded-xl bg-white">
        <div class="flex items-center justify-between">
          <div>
            <h3 class="font-bold text-lg text-neutral-900">AWS Certified Solutions Architect – Associate</h3>
            <p class="text-neutral-600">Amazon Web Services</p>
          </div>
          <span class="text-[10px] font-mono px-3 py-1 bg-orange-100 text-orange-700 rounded-full">
            CERTIFIED
          </span>
        </div>
      </div>
    </section>

    {/* Creative Engine - Light Mode */}
    <section class="mb-16 p-8 bg-neutral-50 border border-neutral-200 rounded-2xl relative overflow-hidden">
      <div class="absolute top-0 right-0 p-6 opacity-5">
        <span class="ripe text-9xl text-neutral-900">RIPE</span>
      </div>
      
      <div class="relative z-10 flex flex-col md:flex-row md:items-center gap-8">
        <div class="flex-1">
          <div class="flex items-center gap-2 mb-3">
            <span class="w-2 h-2 bg-rose-500 rounded-full" />
            <span class="font-mono text-xs text-neutral-400 uppercase tracking-widest">Creative Identity</span>
          </div>
          <h2 class="text-2xl font-bold text-neutral-900 mb-3">The Creative Engine</h2>
          <p class="text-neutral-600 leading-relaxed mb-4">
            Outside engineering, I explore storytelling through <a href="/ripe" class="ripe text-xl">RIPE</a> — my creative identity where filmmaking, writing, and visual design converge. Storytelling teaches rhythm and emotion; engineering teaches structure and precision.
          </p>
          <a 
            href="/ripe" 
            class="inline-flex items-center gap-2 text-sm font-medium text-neutral-900 hover:text-neutral-600 transition-colors"
          >
            <span>Explore RIPE</span>
            <span class="group-hover:translate-x-1 transition-transform">&rarr;</span>
          </a>
        </div>
        
        <div class="flex gap-3">
          <a 
            href="https://www.youtube.com/@ripe6096"
            target="_blank"
            rel="noopener noreferrer"
            class="p-3 bg-white border border-neutral-200 rounded-full hover:border-neutral-400 transition-colors"
          >
            <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor" class="text-neutral-700">
              <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
            </svg>
          </a>
          <a 
            href="https://instagram.com/rishwanthperumandla"
            target="_blank"
            rel="noopener noreferrer"
            class="p-3 bg-white border border-neutral-200 rounded-full hover:border-neutral-400 transition-colors"
          >
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="text-neutral-700">
              <rect x="2" y="2" width="20" height="20" rx="5" ry="5"/>
