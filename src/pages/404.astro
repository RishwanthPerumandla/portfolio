---
import Layout from "../layouts/main.astro";
import Header from "../components/header";

const title = "404 | Page Not Found";
const description = "The page you're looking for doesn't exist.";
---

<Layout title={title} description={description}>
  <Header client:load />
  
  <main class="relative z-10 w-full max-w-2xl mx-auto px-6 md:px-8 pt-32 md:pt-40 pb-20">
    <div class="text-center">
      
      {/* 404 Number */}
      <div class="relative inline-block mb-8">
        <span class="text-9xl md:text-[12rem] font-bold text-neutral-100 select-none">404</span>
        <div class="absolute inset-0 flex items-center justify-center">
          <span class="text-6xl md:text-8xl font-bold text-neutral-900">404</span>
        </div>
      </div>
      
      {/* Message */}
      <h1 class="text-2xl md:text-3xl font-bold text-neutral-900 mb-4">
        Page Not Found
      </h1>
      
      <p class="text-neutral-600 mb-8 max-w-md mx-auto">
        The page you're looking for doesn't exist or has been moved. 
        Check the URL or navigate back to one of the pages below.
      </p>
      
      {/* Navigation Options */}
      <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
        <a 
          href="/"
          class="inline-flex items-center gap-2 px-6 py-3 bg-neutral-900 text-white rounded-lg font-medium hover:bg-neutral-800 transition-colors"
        >
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
          </svg>
          Go Home
        </a>
        
        <a 
          href="/posts"
          class="inline-flex items-center gap-2 px-6 py-3 border border-neutral-200 text-neutral-700 rounded-lg font-medium hover:border-neutral-400 transition-colors"
        >
          Read Posts
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
          </svg>
        </a>
      </div>
      
      {/* Fun Element */}
      <div class="mt-16 p-6 bg-neutral-50 rounded-xl border border-neutral-100">
        <p class="text-sm text-neutral-500 font-mono">
          <span class="text-neutral-400">$</span> curl -I https://rishwanth.com{ Astro.url.pathname }
        </p>
        <p class="text-sm text-neutral-500 font-mono mt-1">
          HTTP/1.1 404 Not Found
        </p>
        <p class="text-sm text-neutral-500 font-mono mt-1">
          Status: Lost in the void ðŸŒŒ
        </p>
      </div>
    </div>
  </main>
</Layout>
