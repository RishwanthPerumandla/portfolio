---
import Dock from "../components/dock";
import Footer from "../components/footer.astro";
import SquareLines from "../components/square-lines.astro";
import "../assets/css/main.css";

const { title, description } = Astro.props;
---

<!doctype html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
    <meta name="description" content={description} />
    
    <!-- Open Graph / Social Media -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:site_name" content="Rishwanth Perumandla" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    
    <!-- Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-K4QSSK6SNE"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'G-K4QSSK6SNE');
    </script>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=DM+Sans:ital,opsz,wght@0,9..40,100..1000;1,9..40,100..1000&family=JetBrains+Mono:wght@400;500&family=Kenia&family=Space+Grotesk:wght@500;700&display=swap" rel="stylesheet">

    <style is:global>
      :root {
        --font-sans: 'DM Sans', sans-serif;
        --font-mono: 'JetBrains Mono', monospace;
      }
      
      body {
        font-family: var(--font-sans);
        background-color: #fafafa;
        color: #171717;
        -webkit-font-smoothing: antialiased;
      }

      .font-mono { font-family: var(--font-mono); } 
      
    </style>
  </head>
  
  <body class="relative min-h-screen flex flex-col">
    <SquareLines />

    <main class="flex-1">
      <slot />
    </main>

    <Footer />

    <div class="fixed bottom-6 left-0 right-0 z-50 flex justify-center pointer-events-none">
        <div class="pointer-events-auto">
            <Dock client:idle />
        </div>
    </div>
<div class="fixed top-0 left-0 h-[2px] bg-neutral-900 z-[60] progress-bar" style="width: 0%"></div>

<script>
  const progressBar = document.querySelector('.progress-bar');
  window.addEventListener('scroll', () => {
    const winScroll = document.body.scrollTop || document.documentElement.scrollTop;
    const height = document.documentElement.scrollHeight - document.documentElement.clientHeight;
    const scrolled = (winScroll / height) * 100;
    progressBar.style.width = scrolled + "%";
  });
</script>
  </body>
</html>