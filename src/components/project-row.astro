---
const { id, name, role, desc, url } = Astro.props;
---

<a href={url} class="group block py-6 border-b border-dashed border-neutral-200 hover:bg-white transition-all duration-300">
    <div class="flex flex-col md:flex-row md:items-center justify-between gap-4">
        
        {/* Column 1: ID & Name */}
        <div class="flex items-baseline gap-4 md:w-1/3">
            <span class="font-mono text-xs text-neutral-400">#{id}</span>
            <span class="font-bold text-lg text-neutral-900 group-hover:underline decoration-1 underline-offset-4 decoration-neutral-400">
                {name}
            </span>
        </div>

        {/* Column 2: Role Badge */}
        <div class="md:w-1/4">
            <span class="inline-block font-mono text-[10px] uppercase tracking-wider text-neutral-500 bg-neutral-100 px-2 py-1 rounded border border-neutral-200 group-hover:border-neutral-300 transition-colors">
                {role}
            </span>
        </div>

        {/* Column 3: Description */}
        <div class="md:w-1/3">
            <span class="text-sm text-neutral-600 leading-relaxed block max-w-sm">
                {desc}
            </span>
        </div>

        {/* Column 4: Arrow (Visible on Hover) */}
        <div class="hidden md:block w-8 text-right">
            <span class="text-xl text-neutral-300 group-hover:text-neutral-900 group-hover:-translate-y-1 group-hover:translate-x-1 transition-all duration-300 inline-block">
                &nearr;
            </span>
        </div>
    </div>
</a>