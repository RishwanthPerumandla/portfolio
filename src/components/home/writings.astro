---
import Button from "../button.astro";
import PostsLoop from "../posts-loop.astro";
---

<section class="max-w-5xl mx-auto px-7 lg:px-0 py-12">
  <!-- Section Heading -->
  <div class="mb-10">
    <h2 class="text-3xl font-extrabold tracking-tight text-neutral-900 dark:text-neutral-100">
      My Writings
    </h2>
    <p class="mt-2 text-lg text-neutral-600 dark:text-neutral-400 max-w-2xl">
      A small corner where I share what Iâ€™m learning, building, and thinking
      about. Sometimes technical, sometimes personal, always honest.
    </p>
  </div>

  <!-- Posts Grid -->
  <div class="grid grid-cols-1 gap-10 md:grid-cols-2">
    <PostsLoop count="4" layout="grid" />
  </div>

  <!-- View All -->
  <div class="flex justify-center mt-12">
    <Button text="View All Writing" link="/posts" />
  </div>
</section>
